      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  </head>

  <body>
    <div class="shadow-one-side"></div>
    <div id="banner">
      <div class="container">
        <address class="pull-left ubuntu">
					<%= link_to 'IONIC Medical Devices', root_url %>
					<span style="font-size:12px; margin-top:-20px; display:inline-block"> - Enhancing a healthy living</span>
					<!-- Mid-Town Business Plaza, Accra Road Off Tom Mboya Street, 3rd flr RN. T72 -->
        </address>
        <!-- <div class="pull-right tel"> -->
          <!-- <p class="ubuntu"><a href="tel:+254-723-456-456">Call us at: +254-0723-958-428</a></p> -->
          <!-- <p class="ubuntu"><span>Open, Mon - Sat 9:00 AM - 18:00 PM</span></p> -->
        <!-- </div> -->
      </div>
    </div>
    <div class="navbar" id="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= render :partial => "layouts/navigation" %>
        </div><!--/.container -->
      </div><!--/.navbar-inner -->
      <%= yield %>
    </div>
    <footer>
      <div class="container">
        <hr>
        <p>&copy; <%= Date.today.year %> IONIC Medical Devices Copyright. All Rights Reserved.</p>
      </div>
    </footer>

